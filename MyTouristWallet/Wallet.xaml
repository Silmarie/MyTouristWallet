<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MyTouristWallet.Wallet">
	<ContentPage.Content>
		<StackLayout Orientation="Vertical">
			<ListView x:Name="walletView">
				<ListView.ItemTemplate>
					<DataTemplate>
						<ViewCell>
							<StackLayout Orientation="Horizontal">
								<Label Text="{Binding value}" TextColor="{Binding color}" FontAttributes="Bold" FontSize="Medium" />
								<Label Text="{Binding description}" HorizontalOptions="StartAndExpand" TextColor="{Binding color}" FontAttributes="Bold" FontSize="Medium" />
							</StackLayout>
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
			<StackLayout Orientation="Horizontal">
				<Button x:Name="calculate" Text="Calculate Total Amount" HorizontalOptions="Start" />
				<Label x:Name="inText" Text=" in " VerticalOptions="Center"/>
				<Label x:Name="totalAmount" />
				<Picker x:Name="curr" Title="Currency" SelectedIndex="{Binding currencies}">
					<Picker.Items />
				</Picker>
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>